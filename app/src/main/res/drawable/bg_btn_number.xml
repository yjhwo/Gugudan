<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#FFF9C4" />
            <stroke android:width="2dip" android:color="#FFC000"/>
            <corners android:bottomRightRadius="5dip"
                android:bottomLeftRadius="5dip"
                android:topRightRadius="5dip"
                android:topLeftRadius="5dip"/>
            <padding
                android:left="0dip"
                android:right="0dip"
                android:top="0dip"
                android:bottom="0dip"
                />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#DCEDC8" />
            <corners android:bottomRightRadius="5dip"
                android:bottomLeftRadius="5dip"
                android:topRightRadius="5dip"
                android:topLeftRadius="5dip"/>
            <padding
                android:left="0dip"
                android:right="0dip"
                android:top="0dip"
                android:bottom="0dip"
                />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#DCEDC8" />
            <corners android:bottomRightRadius="5dip"
                android:bottomLeftRadius="5dip"
                android:topRightRadius="5dip"
                android:topLeftRadius="5dip"/>
            <padding
                android:left="0dip"
                android:right="0dip"
                android:top="0dip"
                android:bottom="0dip"
                />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke android:width="2dip" android:color="#FFC000"/>
            <solid android:color="#DCEDC8" />
            <corners android:bottomRightRadius="5dip"
                android:bottomLeftRadius="5dip"
                android:topRightRadius="5dip"
                android:topLeftRadius="5dip"/>
            <padding
                android:left="0dip"
                android:right="0dip"
                android:top="0dip"
                android:bottom="0dip"
                />
        </shape>
    </item>

</selector>